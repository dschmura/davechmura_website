%footer.fixed-bottom.bg-dark
  .d-flex.flex-row.justify-content-between.align-items-center
    .footer-logo
      -# = link_to image_tag("#{sitename}Logo.png", class: 'navbar-brand navbar-logo', alt: "#{sitename} Logo, link to home page."), root_path
      = link_to (t :sitename), root_path, class:'navbar-brand'
    .footer-links
      %ul.navbar-nav.flex-row.justify-content-around
        %li.nav-item= link_to 'About', about_path, class:'nav-link'
        %li.nav-item= link_to 'Contact Us', contact_path, class:'nav-link'
        %li.nav-item= link_to 'Privacy Policy', privacy_path, class:'nav-link'

        
        - if current_user
          %li.nav-item= link_to("Log out.", destroy_user_session_path, method: :delete, class:'nav-link')
        - else
          %li.nav-item= link_to('Login', new_user_session_path, class:'nav-link')
      .footer-copyright.text-center
        = link_to "© 2018 - Copyright #{(t :sitename)}, All Rights Reserved", about_path
    .footer-contact
    = render 'feedback/feedback'
